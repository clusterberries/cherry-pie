@import "globalVars.styl"

font-family = 'PT Sans Caption', Arial, sans-serif

/*** General ***/
html
    font 14px/1.3 font-family
    color textColor

a
    text-decoration none
    color lightCherry
    transition 0.4s
    &:hover
        color veryLightCherry

h1, h2
    font-weight bold
h1
    font-size 1.86rem
h2
    font-size 1.29rem


/*** Main part ***/
main
    margin-top headerHeight
    @media (max-width: 1100px)
        margin-top headerHeightSmall

.flex-row
    display flex
    justify-content space-between

// State change animation
[ui-view]
    transition viewTransition
    &.ng-enter,
    &.ng-leave
        position absolute
        top 0
        left 0
        right 0
    &.ng-enter
        opacity 0
    &.ng-leave
        opacity 1

// popup styles
.dark-background
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    z-index 3
    background-color darkShadowColor
    .popup
        position relative
        max-width 94%
        max-height 94%
        .close-cross
            position absolute
            top -25px
            right -25px
            width 50px
            height 50px
            background-image url('../assets/icons/cross.svg')
            background-size cover
            cursor pointer
        img
            width 100%

/*** General styles for tags ***/
.tags-list
    font-size fontSmall
    li
        display inline-block
        margin 4px 4px 0 0
        padding 0 10px 2px
        color textNavColor
        background-color mainGreen
