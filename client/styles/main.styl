@import "globalVars.styl"

font-family = 'PT Sans', sans-serif

/*** General ***/
html
    font 14px/1.3 font-family
    color textColor

a
    text-decoration none
    color lightCherry
    transition 0.4s
    &:hover
        color veryLightCherry

h1, h2
    font-weight bold
h1
    font-size 1.86rem
h2
    font-size 1.29rem


/*** Main part ***/
main
    margin-top headerHeight
    @media (max-width: 1100px)
        margin-top headerHeightSmall

.flex-row
    display flex
    justify-content space-between

// State change animation
[ui-view]
    transition viewTransition
    &.ng-enter,
    &.ng-leave
        position absolute
        top 0
        left 0
        right 0
    &.ng-enter
        opacity 0
    &.ng-leave
        opacity 1


/*** Stars directive ***/
starSize = 22px
.stars
    padding-top 4px
    li
        display inline-block
        img
            width starSize
            height starSize


/*** General styles for tags ***/
.tags-list
    font-size fontSmall
    li
        display inline-block
        margin 4px 4px 0 0
        padding 0 10px 2px
        color textNavColor
        background-color mainGreen