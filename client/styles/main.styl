@import "globalVars.styl"

font-family = 'PT Sans', sans-serif
headerHeight = 120px

/*** General ***/
html
    font 14px/1.3 font-family
    color textColor

a
    text-decoration none
    color lightCherry
    transition 0.4s
    &:hover
        color veryLightCherry

h1, h2
    font-weight bold
h1
    font-size 1.86rem
h2
    font-size 1.29rem


/*** Main top menu ***/
header
    position fixed
    top 0
    width 100%
    height headerHeight
    display flex
    align-items center
    border-bottom: 1px solid lightCherry
    box-shadow shadow
    background-color headerColor
    z-index 2
    ul
        display flex
        align-items center
        li
            margin-right 33px
            a
                position relative
                color textColor
                &:hover
                    color lightTextColor
                &:after
                    content ""
                    position absolute
                    top 130%
                    left calc(50% - 4px)
                    width 6px
                    height 6px
                    display block
                    background-color mainGreen
                    border-radius 3px
                    opacity 0
                    transition opacity 0.6s
                &.active:after
                    opacity 1
    .logo
        margin -10px 82px 0 48px
        img
            height 95px


/*** Main part ***/
main
    margin-top headerHeight

.flex-row
    display flex
    justify-content space-between

// State change animation
[ui-view]
    transition viewTransition
    &.ng-enter,
    &.ng-leave
        position absolute
        top 0
        left 0
        right 0
    &.ng-enter
        opacity 0
    &.ng-leave
        opacity 1


/*** Stars directive ***/
starSize = 22px
.stars
    padding-top 4px
    li
        display inline-block
        img
            width starSize
            height starSize


/*** General styles for tags ***/
.tags-list
    font-size fontSmall
    li
        display inline-block
        margin 4px 4px 0 0
        padding 0 10px 2px
        color textNavColor
        background-color mainGreen