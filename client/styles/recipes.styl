@import "globalVars.styl"

transition = 0.4s ease-out
panelOpen = 205px
panelClosed = 35px
liWidth = panelOpen - 60px
titleLeft = 52px
titleWidth = panelOpen - titleLeft

noselect()
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;


.recipes
    .side-panel
        position fixed
        height 100%
        display flex
        noselect()
        box-shadow shadow
        .categories
            background-color darkCherry
        .subcategories
            background-color cherry
        .recipes
            background-color lightCherry
        & > div 
            position relative
            width panelOpen
            transition width transition 
            overflow-x hidden
            a
                color textNavColor
                &:hover
                    color veryLightCherry
                &.active 
                    color black
            .arrow
                position absolute
                top 17px
                left 25px
                width 9px
                height 15px
                background-image url('../img/arrow.png')
                background-size cover
                transition transform transition, left transition
            .title 
                position absolute
                top 15px
                left titleLeft
                width titleWidth
            ul, .title
                transition opacity transition
            ul 
                margin-top 60px
                li 
                    width liWidth
                    padding-left 25px
            &.minimized
                width panelClosed
                .arrow
                    left 13px
                    transform rotate(180deg)
                ul, .title
                    opacity 0
    .container
        transition margin-left viewTransition
        & > div // inner relative div for ui-router animation
            position relative 
        &.wide 
            margin-left panelClosed * 3       
        &.normal 
            margin-left panelClosed * 2 + panelOpen
        &.narrow
            margin-left panelClosed + panelOpen * 2      
        &.narrow2 
            margin-left panelOpen * 3
    